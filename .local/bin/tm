#!/usr/bin/bash



pygame () {
    ROOT="/home/lei/Documents/codes/Python/py_treasure-hunter"
    session="PyGame"
    cd $ROOT
    tmux new-session -d -s $session
    tmux rename-window -t 1 "Main"
    tmux new-window -t $session:1 -n "vim"
    tmux new-window -t $session:2 -n "test"
    tmux new-window -t $session:3 -n "readme"
    tmux new-window -t $session:4 -n "python"

    tmux send-keys -t $session:1 "cd $ROOT" C-m "clear" C-m "v TreasureHunt.py" C-m
    tmux send-keys -t $session:2 "cd $ROOT" C-m "clear" C-m
    tmux send-keys -t $session:3 "cd $ROOT" C-m "clear" C-m "v README.md" C-m
    tmux send-keys -t $session:4 "cd $ROOT" C-m "clear" C-m "python" C-m
}

web () {

    WEBSITE="/home/lei/Documents/codes/leiyu3.github.io/"
    session="web-dev"
    cd $WEBSITE

    tmux new-session -d -s $session
    tmux rename-window -t 1 "Main"

    tmux new-window -t $session:2 -n "html"
    tmux new-window -t $session:3 -n "blog"
    tmux new-window -t $session:4 -n "css"
    tmux new-window -t $session:5 -n "server"

    tmux send-keys -t $session:1 "cd $WEBSITE" C-m "clear" C-m
    tmux send-keys -t $session:2 "cd $WEBSITE" C-m "clear" C-m "v index.html" C-m
    tmux send-keys -t $session:3 "cd $WEBSITE/lb" C-m "clear" C-m
    tmux send-keys -t $session:4 "cd $WEBSITE" C-m "clear" C-m "v style.css" C-m
    tmux send-keys -t $session:5 "cd $WEBSITE" C-m "clear" C-m "./serverup" C-m
}

codeabbey () {
    ROOT="/home/lei/Documents/codes/codeabbey"
    session="CodeAbbey"
    cd $ROOT
    tmux new-session -d -s $session
    tmux rename-window -t 1 "Main"
    tmux new-window -t $session:2 -n "test"
}

cr () {
    ROOT="/home/lei/Documents/codes/CGCSE-Registration"
    session="CGCSE-Reg"
    cd $ROOT
    tmux new-session -d -s $session
    tmux rename-window -t 1 "Main"
    tmux new-window -t $session:2 -n "test"
    tmux new-window -t $session:3 -n "jupyter"

    tmux send-keys -t $session:1 "cd Python\ app" C-m "clear" C-m
    tmux send-keys -t $session:2 "cd Python\ app" C-m "clear" C-m
    tmux send-keys -t $session:3 "cd Python\ app" C-m "jupyter console" C-m "clear" C-m

}

while [ "$#" -gt 0 ]; do
    curr=$1
    shift

    case "$curr" in
    "-w")
        tmux has-session -t web-dev &> /dev/null || web
        tmux attach -t web-dev:1
        ;;
    "-th")
        tmux has-session -t PyGame &> /dev/null || pygame
        tmux attach -t PyGame:1
        ;;
    "-ca")
        tmux has-session -t CodeAbbey &> /dev/null || codeabbey
        tmux attach -t CodeAbbey:1
        ;;
    "-cr")
        tmux has-session -t CGCSE-Reg &> /dev/null || cr
        tmux attach -t CGCSE-Reg:1
        ;;
    *) echo "Unavailable command... $curr"
    esac
done
